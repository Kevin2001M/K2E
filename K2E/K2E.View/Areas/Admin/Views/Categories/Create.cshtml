@model List<K2E.Entities.Category>

@{
    ViewBag.Title = "Index";
}



<main>
    <div class="col-12 bg-dark">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" aria-current="page">@Html.ActionLink("Categorias", "Index", "Categories")</li>
                        <li class="breadcrumb-item active" aria-current="page">Nueva Categoria</li>
                    </ol>
                </nav>

                <div class="row" style="padding:15px">
                    <form action="Create" method="post">
                        <div class="form-row">
                            <div class="form-group">

                                <label style="font-weight:bold">Nombre</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="nombre" class="form-control" required placeholder="Escriba el nombre de categoria" />
                            </div>
                            <div class="form-group mt-3">
                                <label style="font-weight:bold;">Descripcion</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="descripcion" class="form-control" placeholder="Escriba la descripcion" />
                            </div>

                            <div class="form-row mt-3">
                                <div class="form-group col-4 offset-lg-1">
                                    <input type="submit" name="name" value="Guardar" class="btn btn-outline-primary" />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
</main>