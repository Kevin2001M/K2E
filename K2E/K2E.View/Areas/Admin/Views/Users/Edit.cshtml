@model K2E.Entities.User
@{
    ViewBag.Title = "Index";
}




<main>
    <div class="col-12 bg-dark">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" aria-current="page">@Html.ActionLink("Usuario", "Index", "Users")</li>
                        <li class="breadcrumb-item active" aria-current="page">Editar Usuario</li>
                    </ol>
                </nav>

                <div class="row" style="padding:15px">
                    <form action="Edit" method="post">
                        <div class="form-row">

                            <div class="form-group">
                                <label style="font-weight:bold">Clave</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="clave" class="form-control" required value="@Model.Clave" />
                            </div>

                            <div class="form-group">
                                <label style="font-weight:bold">RolId</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="rolId" class="form-control" required value="@Model.RolId" />
                            </div>

                            <div class="form-row mt-3">

                                <input type="hidden" name="email" value="@Model.Email" />

                                <div class="form-group col-4 offset-lg-1">
                                    <input type="submit" name="name" value="Guardar" class="btn btn-outline-primary" />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
</main>