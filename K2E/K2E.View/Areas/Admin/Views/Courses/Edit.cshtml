@model K2E.Entities.Course
@{
    ViewBag.Title = "Index";
}




<main>
    <div class="col-12 bg-dark">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item" aria-current="page">@Html.ActionLink("Cursos", "Index", "Courses")</li>
                        <li class="breadcrumb-item active" aria-current="page">Editar Curso</li>
                    </ol>
                </nav>

                <div class="row" style="padding:15px">
                    @using (Html.BeginForm("Edit", "Courses", FormMethod.Post))
                    {
                        <div class="form-row">

                            <div class="form-group">
                                <label style="font-weight:bold">Titulo</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="titulo" class="form-control" required value="@Model.Titulo" />
                            </div>

                            <div class="form-group">

                                <label style="font-weight:bold">Categoría</label>
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("CategoryId", ViewBag.Categorias as SelectList, "Seleccione una categoría")
                            </div>

                            <div class="form-group">

                                <label style="font-weight:bold">Subtitulo</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="subtitulo" class="form-control" required value="@Model.Subtitulo" />
                            </div>

                            <div class="form-group">

                                <label style="font-weight:bold">Fecha</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="date" name="FechaPublicacion" class="form-control" value="@Model.FechaPublicacion.ToString("yyyy-MM-dd")" required placeholder="Fecha del curso" />
                            </div>

                            <div class="form-group">

                                <label style="font-weight:bold">Descripcion</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="descripcion" class="form-control" required value="@Model.Descripcion" />
                            </div>

                            <div class="form-group">

                                <label style="font-weight:bold">Instructor</label>
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("InstructorId", ViewBag.Instructors as SelectList, "Seleccione una instructor")
                            </div>

                            <div class="form-group mt-3">
                                <label style="font-weight:bold;">Portada</label>
                            </div>
                            <div class="form-group">
                                <input style="background-color:white" type="text" name="portada" class="form-control" required value="@Model.Portada" />
                            </div>

                            <div class="form-row mt-3">

                                <input type="hidden" name="CursoId" value="@Model.CursoId" />
                                <div class="form-group col-4 offset-lg-1">
                                    <input type="submit" name="name" value="Guardar" class="btn btn-outline-primary" />
                                </div>
                            </div>

                        </div>
                    }
                </div>

            </div>
        </div>

    </div>
</main>